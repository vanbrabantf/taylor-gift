    "HIPCHAT_URL": {
      "description": "Your HipChat webhook URLs.",
      "value": "",
      "required": false
    },
    "MICROSOFT_APP_ID": {
      "description": "Your Microsoft bot app ID.",
      "value": "",
      "required": false
