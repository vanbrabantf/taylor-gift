{
  "name": "BotMan",
  "description": "A template for getting started with BotMan and Laravel.",
  "repository": "https://github.com/mpociot/botman-laravel-starter",
  "keywords": ["chatbot", "php", "botman", "laravel", "slack", "facebook", "wechat", "nexmo", "skype", "telegram"],
  "logo": "https://botman.io/img/botman.png",
  "website": "https://botman.io",
  "success_url": "/welcome",
  "env": {
    "FACEBOOK_TOKEN": {
      "description": "Your Facebook page token.",
      "value": "",
